{
  "name": "client",
  "description": "Webcomponent prism-app following open-wc recommendations",
  "license": "MIT",
  "author": "prism-app",
  "version": "0.1.1",
  "type": "module",
  "scripts": {
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "check": "eslint --quiet --ext .ts,.html . --ignore-path .gitignore;  prettier --check \"**/*.ts\" --ignore-path .gitignore ",
    "clean": "rimraf dist && out-src && node_modules",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "build": "rimraf dist && tsc && rollup -c rollup.config.js && yarn run analyze -- --exclude dist",
    "deploy": "yarn run build && cp -R dist ../server && mv ../server/dist ../server/client-dist",
    "start:build": "web-dev-server --root-dir dist --app-index index.html --open",
    "analyze": "cem analyze --litelement",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\""
  },
  "dependencies": {
    "@lit-labs/context": "^0.2.0",
    "lit": "^2.6.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.4",
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/building-rollup": "^2.0.2",
    "@open-wc/dedupe-mixin": "^1.3.1",
    "@open-wc/eslint-config": "^9.2.1",
    "@open-wc/testing": "^3.1.6",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@web/dev-server": "^0.1.34",
    "@web/rollup-plugin-html": "^1.11.0",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "@web/test-runner": "^0.14.0",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "concurrently": "^5.3.0",
    "deepmerge": "^4.2.2",
    "esbuild": "^0.17.14",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-lit-a11y": "^2.4.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-wc": "^1.4.0",
    "husky": "^4.3.8",
    "koa-proxies": "^0.12.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-workbox": "^6.2.0",
    "tslib": "^2.3.1",
    "typescript": "^5.0.3"

  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "off",
        {
          "ignorePackages": true
        }
      ],
      "class-methods-use-this": "off",
      "no-plusplus": "off",
      "no-shadow": "off",
      "wc/guard-super-call": "off",
      "semi": ["error","never"] ,
      "import/no-relative-packages": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "semi": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "customElements": "custom-elements.json"
}
